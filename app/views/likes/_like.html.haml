.like{id: "like-#{comment.id}"}
  - if user_signed_in?
    - if comment.like_user(current_user.id)
      = button_to unlike_path(comment.id), method: :delete, class: "like-button", id: "like-off-button", remote: true do
        .like-red-image{ id: "image-#{comment.id}" }
          = render partial: 'likes/like_red_icon'
        .like-count-box
          .like-count
            - if comment.like_counts == nil
              0
            -else
              = comment.like_counts
          .like-label
            Likes
    - else
      = button_to like_path(comment.id), method: :post, class: "like-button", id: "like-on-button", remote: true do
        .like-gray-image{ id: "image-#{comment.id}" }
          = render partial: 'likes/like_gray_icon'
        .like-count-box
          .like-count
            - if comment.like_counts == nil
              0
            -else
              = comment.like_counts
          .like-label
            Likes
  - else
    = image_tag "like-gray", { class: 'like-icon' }
    .like-count-box
      .like-count
        - if comment.like_counts == nil
          0
        -else
          = comment.like_counts
      .like-label
        Likes

