.user-show-modal
  .background
  .modal-content-wrapper
    .modal-content.dialog
      = link_to user_path(user[0].id) do
        = image_tag 'xxx.png', { class: 'show-close-btn' }
      .user-profile-container
        .user-profile
          .detail
            = link_to user_path(user[0].id) do
              = image_tag user[0].avatar_image.present? ? user[0].avatar_image : 'user-image.png'
              .labels
                .user-name
                  #{user[0].name}
                .ellipsis-job
                  #{user[0].company}
                  %br
                  #{user[0].position}
                .extra-info
                  %span.picker-likes 総 Like 数: 0
                .profile-ellipsised
                  #{user[0].profile}
      .operation-section
        .tab-container
          = link_to user_path(user[0]) do
            %span.tab-title Picks
          .tab-item-follows
            = link_to user_follows_path(user[0]) do
              .count #{user[0].follow_count}
              .unit フォロー
          .tab-item-followers
            = link_to user_followers_path(user[0]) do
              .count #{user[0].followers.count}
              .unit フォロワー
      .user-footer
        = link_to 'プロフィールをもっと見る', user_path(user[0]), {class: 'more-profile'}
