.capture
  = link_to article_path(article.id) do
    = image_tag article.image, { class: 'slide-image'}
    .capture_string
      .picks
        = article.comment_counts
        .small-letter
          Picks
      .title
        = article.title.truncate(30)
      .detail
        .source
          = article.site_name.truncate(20)
        .time
          = article.before_time
