.wrapper
  -# ユーザー詳細（modal）
  = render partial: 'users/user-modal'
  = render partial: "shared/header"
  = render partial: "shared/side-bar"
  = render partial: "search-parts/search-header"
  .tab-contents
    .top#myTabContent.tab-content.selected{ style: "display:block;" }
      -# 記事検索結果
      #tab1.tab-pane.fade.active.in
        = render partial: 'search-parts/tool-bar'
        = render partial: 'search-parts/search-article'
        
      -# コメント検索結果
      #tab2.tab-pane.fade
        = render partial: 'search-parts/tool-bar'
        = render partial: 'search-parts/search-comment', collection: @comments, as: :comment

      -# ユーザー検索結果
      #tab3.tab-pane.fade
        = render partial: 'search-parts/tool-bar'
        = render partial: 'shared/user-card', collection: @users, as: :user
