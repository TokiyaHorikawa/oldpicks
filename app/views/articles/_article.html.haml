.article
  = link_to article_path(article.id) do
    .article-image
      = image_tag article.image, { class: 'image' }

    .picks
      .count
        10
      %span.small-letter
        Picks

    .title_ellipsised
      = article.title.truncate(50)

  = link_to root_path do
    .article-user
      .user-icon
        = image_tag 'sky.jpg', { class: 'icon-image' }

      .user-info
        .user-name
          = article.user.name
        .user-status
          = article.user.position

  = link_to article_path(article.id) do
    .article-comment
      .comment-text
        = article.comments.first.content
      .comment-user
        = image_tag 'sky.jpg', { class: 'comment-icon' }
        = image_tag 'sky.jpg', { class: 'comment-icon' }

  .footer
    .publisher
      = article.site_name.truncate(20)
    .published
      10時間前
